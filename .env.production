# =============================================================================
# Production Environment Configuration
# Domain: offleash.pro
# =============================================================================

# Database
DATABASE_URL=postgres://dogwalker:${DB_PASSWORD}@db.offleash.pro:5432/dog_walker

# Authentication
JWT_SECRET=${JWT_SECRET}

# Google Maps
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Square Payments (Production)
SQUARE_ACCESS_TOKEN=${SQUARE_PRODUCTION_TOKEN}
SQUARE_LOCATION_ID=${SQUARE_PRODUCTION_LOCATION}
SQUARE_ENVIRONMENT=production

# Logging
RUST_LOG=info,tower_http=warn,sqlx=error

# Server
HOST=0.0.0.0
PORT=8080

# Environment
ENVIRONMENT=production

# Base domain
BASE_DOMAIN=offleash.pro

# URLs
API_URL=https://api.offleash.pro
APP_URL=https://app.offleash.pro
ADMIN_URL=https://admin.offleash.pro
PLATFORM_URL=https://platform.offleash.pro

# Support
SUPPORT_EMAIL=support@offleash.pro

# CORS allowed origins (include tenant subdomains via wildcard in nginx/cloudflare)
CORS_ORIGINS=https://app.offleash.pro,https://admin.offleash.pro,https://platform.offleash.pro

# SSL/TLS
SSL_ENABLED=true
