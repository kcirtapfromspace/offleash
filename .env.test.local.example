# =============================================================================
# Local Test Environment Configuration
# Copy to .env.test.local for local Playwright tests
# =============================================================================

# Database (local PostgreSQL)
DATABASE_URL=postgres://offleash:offleash@localhost:5432/offleash_test
TEST_DB_NAME=offleash_test
TEST_DB_USER=offleash
TEST_DB_HOST=localhost
TEST_DB_PORT=5432

# Authentication
JWT_SECRET=test-secret-key-for-local-testing

# Server
HOST=127.0.0.1
PORT=8080
RUST_LOG=info

# Local URLs
API_URL=http://localhost:8080
CUSTOMER_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174
PLATFORM_URL=http://localhost:5175

# Disable external services for testing
GOOGLE_MAPS_API_KEY=
SQUARE_ACCESS_TOKEN=
SQUARE_ENVIRONMENT=sandbox
