{
	"name": "offleash-ios-appium-tests",
	"version": "1.0.0",
	"description": "Appium E2E tests for OFFLEASH iOS app",
	"type": "module",
	"scripts": {
		"test": "wdio run config/wdio.conf.ts",
		"test:auth": "wdio run config/wdio.conf.ts --spec tests/auth/**/*.spec.ts",
		"test:customer-booking": "wdio run config/wdio.conf.ts --spec tests/customer/booking-flow.spec.ts,tests/customer/booking-management.spec.ts",
		"test:customer-profile": "wdio run config/wdio.conf.ts --spec tests/customer/profile.spec.ts,tests/customer/pets.spec.ts,tests/customer/locations.spec.ts,tests/customer/payments.spec.ts",
		"test:walker-core": "wdio run config/wdio.conf.ts --spec tests/walker/onboarding.spec.ts,tests/walker/dashboard.spec.ts,tests/walker/booking-requests.spec.ts",
		"test:walker-settings": "wdio run config/wdio.conf.ts --spec tests/walker/calendar.spec.ts,tests/walker/map.spec.ts,tests/walker/settings.spec.ts",
		"test:error-handling": "wdio run config/wdio.conf.ts --spec tests/error-handling/**/*.spec.ts",
		"test:critical": "wdio run config/wdio.conf.ts --spec tests/auth/login.spec.ts,tests/customer/booking-flow.spec.ts,tests/walker/dashboard.spec.ts",
		"test:multi-tenant": "wdio run config/wdio.conf.ts --spec tests/multi-tenant/**/*.spec.ts",
		"test:all": "wdio run config/wdio.conf.ts",
		"lint": "eslint tests/ pages/ --ext .ts",
		"lint:fix": "eslint tests/ pages/ --ext .ts --fix",
		"allure:generate": "allure generate allure-results --clean -o allure-report",
		"allure:open": "allure open allure-report",
		"coverage:check": "node scripts/check-coverage.js"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@wdio/allure-reporter": "^8.32.0",
		"@wdio/appium-service": "^8.32.0",
		"@wdio/cli": "^8.32.0",
		"@wdio/local-runner": "^8.32.0",
		"@wdio/mocha-framework": "^8.32.0",
		"@wdio/spec-reporter": "^8.32.0",
		"allure-commandline": "^2.25.0",
		"appium": "^2.4.0",
		"appium-xcuitest-driver": "^5.12.0",
		"typescript": "^5.3.0",
		"ts-node": "^10.9.2",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0"
	},
	"dependencies": {
		"dotenv": "^16.3.1"
	}
}
